@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseGroup>

<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var item in Model.Where(m => m.ParentId == null))
                {
                    <li>
                        <a href="/Course?selectedGroups=@item.GroupId"> @item.GroupTitle </a>
                        @if (Model.Any(g => g.ParentId == item.GroupId))
                        {
                            <ul>
                                @foreach (var sub in Model.Where(s => s.ParentId == item.GroupId))
                                {
                                    <li><a href="/Course?selectedGroups=@sub.GroupId"> @sub.GroupTitle </a></li>
                                }
                            </ul>
                        }
                    </li>
                }
                <li><a href="/Course">مشاهده تمامی دوره ها</a></li>
            </ul>
        </nav>
    </div>
</div>
