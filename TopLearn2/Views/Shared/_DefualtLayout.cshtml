<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> تاپ لرن | @ViewData["title"] </title>

    <partial name="_MetaTags" />
    <partial name="_StylesRefrences" />
    <script src="/js/jquery.min.js"></script>
</head>
<body>
    <script src="/js/modernizr-custom.js"></script>

    <div class="landing-layer">
        <div class="container">
            <nav>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <a href="/"> صفحه اصلی </a>
                                <a href="/Forum"> انجمن سایت </a>
                                <a href="/Admin"> پنل مدیریت </a>
                                <a href=""> تماس با ما </a>
                                <a href=""> درباره ما </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="clientarea">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="loggein">
                                    <i class="zmdi zmdi-account"></i><a href="/UserPanel"> @User.Identity.Name ، خوش آمدید </a> /
                                    <a href="/Logout"> خروج </a>
                                </div>
                            }
                            else
                            {
                                <div class="signin ">
                                    <i class="zmdi zmdi-account"></i>
                                    <a href="/Login"> ورود </a> /
                                    <a href="/Register"> عضویت </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
            @RenderSection("SearchBar",false)
        </div>
    </div>

    @await Component.InvokeAsync("CourseGroupComponent")

    @RenderBody()

    <partial name="_Footer" />

    
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.validate.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/sweetalert2.all.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/jquery.min.js"></script>

    @RenderSection("Scripts",false)

</body>


</html>
