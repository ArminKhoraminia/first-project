@page "{id}"
@model TopLearn2.Web.Pages.Admin.CourseGroup.UpdateGroupModel
@{
    ViewData["Title"] = "ویرایش گروه";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش گروه</h1>
    </div>
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseGroup.ParentId" />
        <input type="hidden" asp-for="CourseGroup.GroupId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش گروه
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control">
                    </div>
                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>
