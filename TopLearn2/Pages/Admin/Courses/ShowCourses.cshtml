@page
@model TopLearn2.Web.Pages.Admin.Courses.ShowCoursesModel
@{
    ViewData["Title"] = "لیست دوره ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسه</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>
                                    <img src="/course/image/@item.ImageName" class="thumbnail" style="max-width: 120px" />
                                </td>
                                <td>
                                    @item.CourseTitle
                                </td>
                                <td>
                                    @item.CountEpisode
                                </td>
                                <td>
                                    <a href="/Admin/Courses/UpdateCourse/@item.CourseId" class="btn btn-info btn-lg ">
                                        ویرایش
                                    </a>
                                    <a href="/Admin/Courses/ShowEpisode/@item.CourseId" class="btn btn-primary btn-lg">
                                        بخش ها
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>